---
import Layout from "../layouts/Layout.astro";
import { Card, CardContent } from "@/components/ui/card";
import { motion } from "framer-motion";
import { 
  Target, 
  Eye, 
  Users, 
  Award,
  MapPin,
  Calendar,
  Trophy,
  
} from "lucide-react";

import ScrollReveal from "@/components/react/UI/Animation/ScrollReveal";
import CountUp from "@/components/react/UI/Text/CountUp";
import LightCommunicationBackground from "@/components/react/UI/Animation/LightCommunicationBackground";
import DecryptedText from "@/components/react/UI/Text/DecryptedText";
import DecryptedText from "@/components/react/UI/Text/DecryptedText";
import {ImgAbout} from "@/assets/assets";
import { BackgroundBeams } from "@/components/ui/background-beams";
import ChromaGrid, { type ChromaItem } from "@/components/react/UI/components/ChromaGrid";
import TitleDescript from "@/components/react/UI/components/TitleDescript";
import {  Profile1,
    Profile2,
    Profile3,
    Profile4, } from '@/assets/assets';
import TransitionSVGSection from "@/components/react/UI/components/TransitionSVGSection";



const teamMembers: ChromaItem[] = [
    {
      image:Profile1,
      title: "Jean-Claude Kouassi",
      subtitle: "Directeur Technique",
    },
    {
      image:Profile2,
      title: "Aminata Traoré", 
      subtitle: "Ingénieure Sécurité",
    },
    {
      image:Profile3,
      title: "David Assamoi",
      subtitle: "Chef de Projet",
    },
    {
      image:Profile4,
      title: "Alex Ange",
      subtitle: "Full Stack Developer",
      handle: "@alexrivera",
      url: "https://github.com/",
    }
  ];

  const achievements = [
    {
      icon: Trophy,
      title: "200+ Projets",
      description: "Projets IT réalisés avec succès",
      count: 200
    },
    {
      icon: Users,
      title: "50+ Clients",
      description: "Entreprises nous font confiance",
      count: 50
    },
    {
      icon: Calendar,
      title: "10+ Années",
      description: "D'expertise dans le domaine IT",
      count: 10
    },
    {
      icon: Award,
      title: "Certifications",
      description: "Partenaire agréé des grandes marques",
      count: 4
    }
  ];

  const addValueCompany = [
                { title: "Excellence", description: "Nous visons l'excellence dans chaque projet, avec des solutions IT de qualité supérieure." },
                { title: "Innovation", description: "Nous restons à la pointe de la technologie pour offrir les solutions les plus avancées." },
                { title: "Partenariat", description: "Nous construisons des relations durables basées sur la confiance et la transparence." }
              ];
---


<Layout title="IT4A | a propos de nous">

    <div class="bg-gradient-to-br w-full text-white backdrop-blur-xs overflow-hidden">
      {/* Hero Section */}
      <LightCommunicationBackground 
        className="absolute inset-0 -z-10"
        client:load
      >
        <section class="relative bg-gradient-to-br backdrop-blur-xs from-transparent via-black/50 to-it4a-primary/50 pt-50 p-10">
      
          <div class="max-w-7xl mx-auto px-4 relative flex items-center flex-col  gap-7 ">
            <ScrollReveal client:only>
              <div class="text-center">
                <motion.h1
                  className="text-4xs md:text-5xl font-bold text-gray-100 mb-6"
                  initial={{ opacity: 0, y: 30 }}
                  animate={{ opacity: 1, y: 0 }}
                  transition={{ duration: 0.8 }}
                  client:only
                >
                  <DecryptedText
                    speed={20}
                    animateOn="view"
                    text="  À propos d'"
                    client:load
                  />
                  <span class="text-transparent bg-clip-text bg-gradient-to-r from-it4a-primary to-it4a-orange">     
                      <DecryptedText
                        animateOn="view"
                        speed={10}
                        text="ITExperts4Africa"
                        client:load
                      />
                  </span>
                </motion.h1>
                <motion.p
                  className="text-xl text-gray-200 max-w-3xl mx-auto leading-relaxed"
                  initial={{ opacity: 0, y: 20 }}
                  animate={{ opacity: 1, y: 0 }}
                  transition={{ duration: 0.8, delay: 0.2 }}
                  client:only
                >
                    <DecryptedText
                      splitType="words"
                      text="Spécialisés dans les services réseaux et infrastructures IT, nous accompagnons les entreprises africaines vers l'excellence technologique."
                      client:load
                    />
         
                </motion.p>
              </div>
            </ScrollReveal>
            <div class="grid lg:grid-cols-2 gap-16 items-center">
              <ScrollReveal direction="left" client:only>
                <motion.div
                  whileHover={{ scale: 1.02 }}
                  transition={{ duration: 0.3 }}
                  client:only
                >
                  <img
                    src={ImgAbout}
                    alt="Modern office with IT equipment"
                    class="rounded-2xl shadow-2xl w-full h-96 object-cover"
                  />
                </motion.div>
              </ScrollReveal>
        
              <ScrollReveal direction="right" delay={0.2} client:only>
                <div class="space-y-8">
                  <motion.div
                    className="flex items-center space-x-3"
                    whileHover={{ x: 10 }}
                    transition={{ duration: 0.3 }}
                    client:only
                  >
                    <MapPin className="h-6 w-6 text-it4a-primary" />
                    <span class="text-lg text-gray-100">Basé à Abidjan, Cocody</span>
                  </motion.div>
                  <motion.p
                    className="text-lg text-gray-200 leading-relaxed"
                    initial={{ opacity: 0 }}
                    whileInView={{ opacity: 1 }}
                    transition={{ duration: 0.8 }}
                    viewport={{ once: true }}
                    client:only
                  >
                    ITExperts4Africa est née de la volonté de démocratiser l'accès aux technologies
                    IT de pointe en Afrique. Notre équipe d'ingénieurs passionnés cumule plus de
                    10 ans d'expérience dans la conception, la maintenance et l'optimisation de
                    systèmes informatiques.
                  </motion.p>
                  <motion.p
                    className="text-lg  leading-relaxed"
                    initial={{ opacity: 0 }}
                    whileInView={{ opacity: 1 }}
                    transition={{ duration: 0.8, delay: 0.2 }}
                    viewport={{ once: true }}
                    client:only
                  >
                    Nous croyons fermement que la transformation numérique est un levier essentiel
                    pour la croissance des entreprises africaines. C'est pourquoi nous mettons
                    notre expertise au service de votre réussite.
                  </motion.p>
                </div>
              </ScrollReveal>
            </div>
          </div>
        </section>
      </LightCommunicationBackground>

      {/* Mission & Vision */}
      <section class="py-20 bg-transparent relative">
        <TransitionSVGSection/>
         <BackgroundBeams
        className="h-full -z-20 bg-it4a-secondary text-it4a-primary"
        client:only
      />
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid md:grid-cols-2 gap-12">
            <ScrollReveal direction="left" client:only>
              <motion.div
                whileHover={{ y: -5 }}
                transition={{ duration: 0.3 }}
                client:only
              >
                <Card className="bg-gray-700/20 border-1 border-gray-50/20 shadow-2xl  rounded-3xl p-8 backdrop-blur-md h-full">
                  <CardContent className="p-4 ">
                    <div class="flex items-center gap-5 ">
                      <motion.div 
                        className=" w-8 md:w-16 h-8 md:h-16 bg-it4a-secondary rounded-full flex items-center justify-center  text-it4a-primary "
                        whileHover={{ rotate: 360 }}
                        transition={{ duration: 0.6 }}
                        client:only
                      >
                        <Target className="h-4 w-4 md:h-8 md:w-8 " />
                      </motion.div>
                      <h2 class="block font-bold text-transparent bg-clip-text bg-gradient-to-r from-it4a-primary to-it4a-orange text-xs md:text-3xl">Notre Mission</h2>
                    </div>
                    <p class="text-gray-100 text-lg leading-relaxed">
                      Aider les entreprises africaines à bénéficier de réseaux performants, 
                      sécurisés et parfaitement adaptés à leurs besoins spécifiques. Nous 
                      démocratisons l'accès aux technologies IT de pointe pour accélérer 
                      la croissance de nos clients.
                    </p>
                  </CardContent>
                </Card>
              </motion.div>
            </ScrollReveal>
            <ScrollReveal direction="right" delay={0.2} client:only>
              <motion.div
                whileHover={{ y: -5 }}
                transition={{ duration: 0.3 }}
                client:only
              >
                <Card className="bg-gray-700/20 border-1 border-gray-50/20 shadow-2xl  rounded-3xl p-8 backdrop-blur-md h-full">
                  <CardContent className="p-4 ">
                    <div class="flex items-center gap-5 ">
                      <motion.div 
                        className=" w-8 md:w-16 h-8 md:h-16 bg-it4a-secondary rounded-full flex items-center justify-center  text-it4a-primary "
                        whileHover={{ rotate: 360 }}
                        transition={{ duration: 0.6 }}
                        client:only
                      >
                        <Eye  className="h-4 w-4 md:h-8 md:w-8 " />
                      </motion.div>
                      <h2 class="block font-bold text-transparent bg-clip-text bg-gradient-to-r from-it4a-primary to-it4a-orange text-xs md:text-3xl">Notre Vision</h2>
                    </div>
                    <p class="text-gray-100 text-lg leading-relaxed">
                      Devenir un acteur clé de la transformation numérique en Afrique en 
                      proposant des solutions IT innovantes, fiables et accessibles. Nous 
                      voulons être le partenaire de référence pour toute entreprise souhaitant 
                      moderniser son infrastructure technologique.
                    </p>
                  </CardContent>
                </Card>
              </motion.div>
            </ScrollReveal>
          </div>
        </div>
      </section>

      {/* Achievements */}
      <section id="#projet" class="py-20 text-white backdrop-blur-xl bg-gradient-to-r from-it4a-primary/50 via-it4a-secondary/90 to-it4a-secondary">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <ScrollReveal client:only>
            <div class="text-center mb-16">
              <TitleDescript title="Nos réalisations en chiffres" descript="Des résultats concrets qui témoignent de notre expertise" client:only/>
            </div>
          </ScrollReveal>

          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {achievements.map((achievement, index) => (
              <ScrollReveal  delay={index * 0.1} direction="up" client:only>
                <motion.div
                  whileHover={{ y: -10, scale: 1.05 }}
                  transition={{ duration: 0.3 }}
                  client:only
                >
                  <Card className="bg-transparent border-1 border-gray-300 backdrop-blur-md shadow-lg text-center hover:shadow-xl transition-all duration-300 h-full">
                    <CardContent className="p-8">
                      <motion.div 
                        className={`w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center bg-gray-600/20 border-1 border-gray-100 text-it4a-primary`}
                        whileHover={{ rotate: 360, scale: 1.1 }}
                        transition={{ duration: 0.6 }}
                        client:only
                      >
                        <achievement.icon className="md:h-8 md:w-8" />
                      </motion.div>
                      <h3 class="text-2xl font-bold text-gray-100 mb-2">
                        <CountUp to={achievement.count} duration={2} client:only />
                      </h3>
                      <p class="text-gray-300">{achievement.description} </p>
                    </CardContent>
                  </Card>
                </motion.div>
              </ScrollReveal>
            ))}
          </div>
        </div>
      </section>

      {/* Team Section */}
      <section id="#teams" class="py-20 bg-transparent relative">
        <TransitionSVGSection/>
         <BackgroundBeams
        className="h-full -z-20 bg-it4a-secondary text-it4a-primary"
        client:only/>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <ScrollReveal client:only>
            <div class="text-center mb-16">
              <TitleDescript title="Notre équipe d'experts" descript="Des professionnels passionnés au service de votre réussite" client:load />
            </div>
          </ScrollReveal>
          <div class="container flex flex-col itmes-center justify-center gap-1 max-w-7xl mx-auto">
            <ChromaGrid items={teamMembers}  className="bg-transparent backdrop-blur-xs p-4 rounded-2xl place-items-center font-Poppins" client:load/>
          </div>
        </div>
      </section>

      {/* Values Section */}
      <section class="py-20 bg-gradient-to-r from-it4a-primary/40 via-black/40 to-it4a-secondary relative overflow-hidden">
        <motion.div
          className="absolute top-0 left-0 w-full h-full opacity-10"
          animate={{
            backgroundPosition: ["0% 0%", "100% 100%"],
          }}
          transition={{
            duration: 20,
            repeat: Infinity,
            ease: "linear"
          }}
          style={{
            backgroundImage: "url('data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M20 20c0 5.5-4.5 10-10 10s-10-4.5-10-10 4.5-10 10-10 10 4.5 10 10z'/%3E%3C/g%3E%3C/svg%3E')",
            backgroundSize: "40px 40px"
          }}
          client:only
        />
        
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
          <ScrollReveal client:only>
            <motion.h2
                  className="text-3xs md:text-3xl font-bold text-gray-100 mb-6"
                  initial={{ opacity: 0, y: 30 }}
                  animate={{ opacity: 1, y: 0 }}
                  transition={{ duration: 0.8 }}
                  client:only
                >
                  <DecryptedText
                    speed={20}
                    animateOn="view"
                    text="Nos valeurs"
                    client:load
                  />
                  <span class="text-transparent bg-clip-text bg-gradient-to-r from-it4a-primary to-it4a-orange">     
                      <DecryptedText
                        animateOn="view"
                        speed={10}
                        text=" Nos valeurs fondamentales"
                        client:load
                      />
                  </span>
            </motion.h2>
        
            <div class="grid md:grid-cols-3 gap-8 mt-12">
              {addValueCompany.map((value, index) => (
                <motion.div
                  key={index}
                  className="text-center"
                  initial={{ opacity: 0, y: 30 }}
                  whileInView={{ opacity: 1, y: 0 }}
                  transition={{ duration: 0.6, delay: index * 0.2 }}
                  viewport={{ once: true }}
                  whileHover={{ scale: 1.05 }}
                  client:only
                >
                  <h3 class=" text-xs  md:text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-it4a-primary to-it4a-orange  mb-3">{value.title}</h3>
                  <p class="text-blue-100">{value.description}</p>
                </motion.div>
              ))}
            </div>
          </ScrollReveal>
        </div>
      </section>
    </div>
</Layout>